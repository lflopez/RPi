#!/bin/bash

## A script to record the temperature and humidity measured by a DHT22 sensor.

########## VARIABLES

temp="Temperature 2"
now=$(date +"%x %T")
min=$(date +"%M")
hum="Humidity"

timearray=( $(date +"%H %M %S") )		## ${timearray[n]}= (hour,n=0),(minutes,n=1),(seconds,n=3)

########## SCRIPT

echo "$now $(sudo ./AdafruitDHT.py 22 4)" >> registro.txt

echo "the second is ${timearray[2]}"

